{
  "name": "pangu2",
  "displayName": "盤古之白",
  "description": "這個擴充套件會自動替你在文件中所有的中文字和半形的英文、數字、符號之間插入空白。",
  "version": "1.3.2",
  "preview": false,
  "publisher": "doggy8088",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/doggy8088/vscode-pangu2"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#EBF0F7",
    "theme": "light"
  },
  "keywords": [
    "pangu",
    "中文"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onEditSession:file"
  ],
  "main": "./out/main",
  "contributes": {
    "commands": [
      {
        "command": "pangu2.add_space_selection",
        "title": "Pangu: 加入盤古之白 (選取範圍)"
      },
      {
        "command": "pangu2.add_space_whole",
        "title": "Pangu: 加入盤古之白 (整份文件)"
      }
    ],
    "languageModelTools": [
      {
        "name": "pangu2_format_text",
        "displayName": "盤古之白格式化工具",
        "modelDescription": "Automatically formats Chinese text by adding appropriate spaces between Chinese characters and English/numeric characters. This tool applies the Pangu spacing rules to improve readability of mixed Chinese-English text. It supports both plain text and Markdown documents, preserving formatting while optimizing character spacing. To use with files, reference them like: #file:filename.md",
        "userDescription": "自動在中文字和英文、數字、符號之間插入空白，改善混合中英文本的可讀性。支援檔案引用，例如：#file:檔名.md",
        "toolReferenceName": "pangu",
        "canBeReferencedInPrompt": true,
        "icon": "$(symbol-text)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "The text content to be formatted with Pangu spacing rules. Can be plain text or Markdown."
            },
            "file": {
              "type": "string",
              "description": "Absolute path to a file that should be formatted in place using Pangu spacing rules."
            }
          },
          "required": []
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "pangu2.add_space_whole",
          "when": "!editorHasSelection",
          "group": "pangu"
        },
        {
          "command": "pangu2.add_space_selection",
          "when": "editorHasSelection",
          "group": "pangu"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "盤古之白",
      "properties": {
        "pangu2.autoAddSpaceOnSave": {
          "type": "boolean",
          "default": false,
          "title": "儲存時自動執行盤古之白",
          "description": "自動在儲存文件時加入盤古之白"
        },
        "pangu2.autoAddSpaceOnSaveFileExtensions": {
          "title": "僅在特定檔案類型儲存時自動執行盤古之白",
          "type": "array",
          "default": [
            ".txt"
          ],
          "description": "請設定自定義的副檔名以在文字儲存時自動套用盤古之白，例如：.md、.txt 或 * 等等。預設僅套用 .txt 文件。"
        },
        "pangu2.enableLooseFormatting": {
          "type": "boolean",
          "default": false,
          "title": "啟用鬆散格式",
          "description": "啟用鬆散格式可減少 Markdown 中不必要的字元跳脫，例如 _ 和 [ 符號。預設為 false，會保持嚴格的 Markdown 格式。"
        }
      }
    }
  },
  "scripts": {
    "vscode:publish": "vsce publish",
    "vscode:prepublish": "rimraf --glob out/* && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node tests/run-tests.mjs",
    "test:simple": "node tests/simple-test-1.mjs",
    "test:visual": "node tests/visual-test-2.mjs",
    "test:quick": "node tests/quick-test-3.mjs"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^12.12.21",
    "@types/vscode": "^1.41.0",
    "esbuild": "^0.19.5",
    "glob": "^7.1.5",
    "rimraf": "^5.0.5",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "mdast-util-gfm-footnote": "^2.1.0",
    "mdast-util-gfm-strikethrough": "^2.0.0",
    "mdast-util-gfm-table": "^2.0.0",
    "mdast-util-gfm-task-list-item": "^2.0.0",
    "micromark-extension-gfm-footnote": "^2.1.0",
    "micromark-extension-gfm-strikethrough": "^2.1.0",
    "micromark-extension-gfm-table": "^2.1.1",
    "micromark-extension-gfm-task-list-item": "^2.1.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.3",
    "unist-util-visit": "^5.0.0"
  }
}
